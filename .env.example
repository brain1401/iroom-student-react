# iRoom Student React - 환경 변수 예시 파일
# 실제 사용 시 .env.local 파일로 복사하여 값 수정

# =================
# 백엔드 API 설정
# =================

# 백엔드 서버 URL
VITE_BACKEND_API_URL=http://100.82.50.108:3055

# Mock API 사용 여부 (개발용)
VITE_USE_MOCK_API=true

# =================
# 기본 사용자 정보
# =================

# 기본 사용자 이름 (로그인 전 표시용)
VITE_DEFAULT_USER_NAME=정보 없음

# 기본 사용자 배지 라벨 (학급/그룹 표시용)
VITE_DEFAULT_USER_BADGE=중등 B반

# =================
# 개발/테스트 설정
# =================

# 개발 모드에서 헬스체크 활성화 여부
VITE_ENABLE_HEALTH_CHECK=true

# 헬스체크 간격 (밀리초)
VITE_HEALTH_CHECK_INTERVAL=30000

# 포켓몬 API 기본 페이지 크기
VITE_POKEMON_DEFAULT_LIMIT=24

# =================
# 디버깅 설정
# =================

# 개발 도구 표시 여부
VITE_SHOW_DEV_TOOLS=true

# API 요청 로깅 활성화
VITE_ENABLE_API_LOGGING=false